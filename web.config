<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpErrors>
            <!-- Redirect to custom 404 page -->
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" path="/404.php" responseMode="ExecuteURL" />
        </httpErrors>
        <rewrite>
            <rules>
                <!-- Rewrite rules for various pages -->
                <rule name="Latest Updates" stopProcessing="true">
                    <match url="^latest-updates$" />
                    <action type="Rewrite" url="all-latest-updates.php" />
                </rule>
                <rule name="Search Notice" stopProcessing="true">
                    <match url="^search-notice$" />
                    <action type="Rewrite" url="search-notice.php" />
                </rule>
                <rule name="Slug Listing" stopProcessing="true">
                    <match url="^([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="listing.php?slug={R:1}" />
                </rule>
                
                <!-- College related routes -->
                <rule name="College Slug" stopProcessing="true">
                    <match url="^college/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="college.php?slug={R:1}" />
                </rule>
                <rule name="College Notice" stopProcessing="true">
                    <match url="^college/([a-zA-Z0-9_-]+)/notice$" />
                    <action type="Rewrite" url="notice.php?slug={R:1}" />
                </rule>
                <rule name="College Meritlist" stopProcessing="true">
                    <match url="^college/([a-zA-Z0-9_-]+)/meritlist$" />
                    <action type="Rewrite" url="college_meritlist.php?slug={R:1}" />
                </rule>
                <rule name="College Courses" stopProcessing="true">
                    <match url="^college/([a-zA-Z0-9_-]+)/courses$" />
                    <action type="Rewrite" url="courses.php?slug={R:1}" />
                </rule>
                <rule name="College Contact" stopProcessing="true">
                    <match url="^college/([a-zA-Z0-9_-]+)/contact$" />
                    <action type="Rewrite" url="college_contact.php?slug={R:1}" />
                </rule>
                
                <!-- University related routes -->
                <rule name="University Meritlist" stopProcessing="true">
                    <match url="^university/([a-zA-Z0-9_-]+)/meritlist$" />
                    <action type="Rewrite" url="university_meritlist.php?slug={R:1}" />
                </rule>
                <rule name="University Contact" stopProcessing="true">
                    <match url="^university/([a-zA-Z0-9_-]+)/contact$" />
                    <action type="Rewrite" url="university_contact.php?slug={R:1}" />
                </rule>
                <rule name="University Notice" stopProcessing="true">
                    <match url="^university/([a-zA-Z0-9_-]+)/notice$" />
                    <action type="Rewrite" url="notice_university.php?slug={R:1}" />
                </rule>
                <rule name="University Slug" stopProcessing="true">
                    <match url="^university/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="university.php?slug={R:1}" />
                </rule>

                <!-- Exam related routes -->
                <rule name="Exam Notice" stopProcessing="true">
                    <match url="^exams/([a-zA-Z0-9_-]+)/notice$" />
                    <action type="Rewrite" url="notice_exam.php?slug={R:1}" />
                </rule>
                <rule name="Exam Slug" stopProcessing="true">
                    <match url="^exams/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="exams.php?slug={R:1}" />
                </rule>

                <!-- General notice routes -->
                <rule name="Notice College" stopProcessing="true">
                    <match url="^notice/college/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="notice-detail-college.php?slug={R:1}" />
                </rule>
                <rule name="Notice University" stopProcessing="true">
                    <match url="^notice/university/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="notice-detail-university.php?slug={R:1}" />
                </rule>
                <rule name="Notice Exam" stopProcessing="true">
                    <match url="^notice/exam/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="notice-detail-exam.php?slug={R:1}" />
                </rule>

                <!-- Course detail routes -->
                <rule name="Course Detail" stopProcessing="true">
                    <match url="^course/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="course-detail.php?slug={R:1}" />
                </rule>

                <!-- Page detail routes -->
                <rule name="Page College Detail" stopProcessing="true">
                    <match url="^pages/college/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="page-detail-college.php?slug={R:1}" />
                </rule>
                <rule name="Page University Detail" stopProcessing="true">
                    <match url="^pages/university/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="page-detail-university.php?slug={R:1}" />
                </rule>
                <rule name="Page Exam Detail" stopProcessing="true">
                    <match url="^pages/exam/([a-zA-Z0-9_-]+)$" />
                    <action type="Rewrite" url="page-detail-exam.php?slug={R:1}" />
                </rule>

                <!-- Uncomment below for PHP file handling -->
                <!--
                <rule name="Handle PHP Files Without Extension" stopProcessing="true">
                    <match url="^([^\.]+)$" />
                    <action type="Rewrite" url="{R:1}.php" />
                </rule>
                -->
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
